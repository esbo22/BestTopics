<h1>Sujets de discussion</h1>

<%= form_tag(topics_path, method: :get) do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Rechercher", name: nil, class: "button" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Titre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.id%></td>
      <td><%= topic.title%></td>
      <td><%= link_to "Voir", topic %></td>
      <td><%= link_to "Éditer", edit_topic_path(topic) %></td>
      <td><%= link_to "Supprimer", topic, method: :delete, data: { confirm: "sur ?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%=  will_paginate @topics, renderer: FoundationPagination::Rails %>
<%= link_to "Sujet publiés", published_topics_path %>
<%= link_to "Nouveau sujet", new_topic_path %>
